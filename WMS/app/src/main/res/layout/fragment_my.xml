<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smec.wms.android.fragment.MyFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/blue_user"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <com.smec.wms.android.view.CircleImageView
            android:src="@mipmap/header_icon"
            app:border_width="0dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:text="我的"
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_router"
        android:background="@drawable/left_center"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_margin="20dp"
            android:src="@mipmap/network_icon"
            android:id="@+id/item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textColor="#333"
            android:text="系统环境"
            android:id="@+id/item_text"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/network_info"
            android:textSize="20sp"
            android:textColor="#666"
            android:text="测试环境"
            android:layout_marginRight="-25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/go_right"
            android:layout_margin="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_setting"
        android:background="@drawable/left_center"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_margin="20dp"
            android:src="@mipmap/setting_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/systemInfo"
            android:textColor="#333"
            android:text="系统版本 1.1.14"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/go_right"
            android:layout_margin="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_exit"
        android:background="@drawable/left_center"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:layout_margin="20dp"
            android:src="@mipmap/exit_icon"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textColor="#333"
            android:text="退出"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/go_right"
            android:layout_margin="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>
</LinearLayout>
