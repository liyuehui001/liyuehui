<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background_user"
        android:layout_marginTop="0dp"
        android:scrollbars="none">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/width_between_l"
                android:background="@drawable/selector_l_bg"
                android:clickable="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"

                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="RDC分公司入库   在线"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/l1"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:background="@drawable/selector_l_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="RDC分公司入库   离线"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/l2"
                android:layout_marginTop="@dimen/width_between_l"
                android:background="@drawable/selector_l_bg"
                android:clickable="true"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="RDC分公司上架"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/l3"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_l_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="RDC分公司收货清点"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/l4"
                android:layout_marginTop="@dimen/width_between_l"
                android:background="@drawable/selector_l_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="拣货"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/l5"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_l_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="盘点"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_for_l"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/l6"
                android:layout_marginTop="1dp"
                android:background="@drawable/selector_l_bg"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/height_for_icon"
                    android:layout_height="@dimen/height_for_icon"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/width_between_icon_text"
                    android:gravity="center"
                    android:text="装箱子"
                    android:textColor="@color/black_user"
                    android:textSize="@dimen/text_size_for_l" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</FrameLayout>