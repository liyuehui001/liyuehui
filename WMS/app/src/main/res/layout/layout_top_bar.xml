<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/px10dp"
    android:gravity="center_vertical"
    android:background="@color/blue_user"
    >

    <LinearLayout
        android:id="@+id/back"
        android:paddingLeft="@dimen/px10dp"
        android:paddingRight="@dimen/px14dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_text_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="返回"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_text_title_header"
            android:layout_marginRight="@dimen/px10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:text="合同号梯号"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/white" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="title"
            android:textSize="@dimen/font_size_16sp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_text_right1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="right1"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10sp" />

        <TextView
            android:id="@+id/tv_text_right2"
            android:layout_width="@dimen/px54dp"
            android:layout_height="@dimen/px46dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="right2"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_10sp" />
    </LinearLayout>

</LinearLayout>