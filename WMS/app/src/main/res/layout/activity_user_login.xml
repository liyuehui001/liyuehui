    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/login_title1_txt"
        android:textColor="#0171BB"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="上海三菱电梯"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textColor="#0171BB"
        android:textSize="30sp"
        android:layout_below="@id/login_title1_txt"
        android:layout_centerHorizontal="true"
        android:text="备品备件管理系统"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.smec.wms.android.view.ClearEditText
        android:layout_centerHorizontal="true"
        android:id="@+id/login_account"
        android:layout_marginTop="200dp"
        android:paddingLeft="35dp"
        android:hint="请输入用户名"
        android:background="@mipmap/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true">
        <requestFocus/>
    </com.smec.wms.android.view.ClearEditText>
    <com.smec.wms.android.view.ClearEditText
        android:id="@+id/login_password"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/login_account"
        android:layout_centerHorizontal="true"
        android:paddingLeft="35dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:background="@mipmap/edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true">
        <requestFocus/>
    </com.smec.wms.android.view.ClearEditText>

    <LinearLayout
        android:id="@+id/login_check_layout"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_alignLeft="@id/login_password"
        android:layout_alignRight="@id/login_password"
        android:layout_below="@id/login_password"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/check_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:clickable="false"
                android:background="@mipmap/select_checkbox"
                android:id="@+id/user_checkbox"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_alignTop="@id/user_checkbox"
                android:layout_toRightOf="@id/user_checkbox"
                android:textColor="#999"
                android:text="记住密码"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
        <Spinner
            android:gravity="end"
            android:layout_gravity="end"
            android:paddingRight="30dp"
            android:background="@mipmap/spinner"
            android:id="@+id/network_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <requestFocus />
        </Spinner>
    </LinearLayout>

    <Button
    android:layout_below="@id/login_check_layout"
    android:layout_alignLeft="@id/login_password"
    android:layout_alignRight="@id/login_password"
    android:id="@+id/login_action"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/selector_longin_button"
    android:padding="1dp"
    android:text="登      录"
    android:textColor="@color/white"
    android:textSize="21sp" />


    <ImageView
    android:id="@+id/imageView2"
    android:layout_width="240dp"
    android:layout_height="80dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:src="@mipmap/smec_logo" />

</RelativeLayout>