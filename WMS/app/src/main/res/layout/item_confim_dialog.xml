<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:background="@drawable/dialog_confim"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="@dimen/px440dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/popwindow_content"
            android:layout_marginTop="@dimen/px60dp"
            android:layout_marginBottom="@dimen/px60dp"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginRight="@dimen/px50dp"
            android:gravity="center"
            android:text="@string/str_final_rejection"
            android:textSize="@dimen/font_size_20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_negativeButton"
                android:background="@drawable/bg_btn_pop_cancel"
                android:layout_weight="1"
                android:gravity="center"
                android:text= "@string/tv_cancel"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="@dimen/px80dp" />

            <TextView
                android:id="@+id/tv_positiveButton"
                android:background="@drawable/bg_btn_pop_submit"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/tv_submit"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="@dimen/px80dp" />
        </LinearLayout>

    </LinearLayout>

</layout>