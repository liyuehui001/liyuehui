<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <!-- show rectangle area -->
        <shape android:shape="rectangle">
            <solid
                android:color="#88cccccc"/>

            <corners
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip" />
        </shape>
    </item>
    <!-- layout foreground -->
    <item
        android:left="2dp"
        android:bottom="3dp">
        <!-- show rectangle area -->
        <shape android:shape="rectangle">


            <solid
                android:color="@color/logisitics_inbox" />

            <corners
                android:bottomLeftRadius="4dip"
                android:bottomRightRadius="4dip"
                android:topLeftRadius="4dip"
                android:topRightRadius="4dip" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:bottom="3dp"
        android:right="@dimen/px16dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"></solid>

            <corners
                android:bottomLeftRadius="4dip"
                android:topLeftRadius="4dip" />
        </shape>
    </item>

</layer-list>